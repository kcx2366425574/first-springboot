<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-init-method="init"
	default-destroy-method="destroy">

	<bean id="springDemo" class="com.kcx.demo.springDemo.SpringDemo">
		<property name="message" value="Hello world!"></property>
	</bean>
	
	<bean id="anotherSpringDemo" class="com.kcx.demo.springDemo.AnotherSpringDemo">
		<property name="message" value="Hello world!, this is another demo"></property>
	</bean>
	
	<bean class="com.kcx.demo.springDemo.InitHelloWorld"></bean>
</beans>
